{
    "name": "@thiagodnf/m2h",
    "version": "0.0.8",
    "author": "Thiago Ferreira",
    "description": "A Markdown to HTML converter with inline CSS generated from SASS",
    "license": "MIT",
    "type": "module",
    "main": "index.js",
    "engines": {
        "node": ">=16.14.0"
    },
    "keywords": [
        "css",
        "html",
        "markdown",
        "converter",
        "scss"
    ],
    "scripts": {
        "test": "jest --coverage ./test",
        "lint": "eslint .",
        "lint-fix": "npx eslint . --fix",
        "build": "ncc build src/M2H.js -o dist --source-map  --license licenses.txt",
        "start": "node index.js extra/example.md --css extra/style.scss"
    },
    "devDependencies": {
        "@babel/preset-env": "7.20.2",
        "@vercel/ncc": "0.36.1",
        "babel-jest": "29.4.3",
        "eslint": "8.34.0",
        "jest": "29.4.3"
    },
    "dependencies": {
        "command-line-args": "5.2.1",
        "glob": "9.2.1",
        "highlight.js": "11.7.0",
        "juice": "8.1.0",
        "sass": "1.58.3",
        "showdown": "2.1.0"
    }
}
